@model evantage.Pages.Components.LeadsPanel

@{
    var lead = @Model.CurrentLeads.First();
}

<div x-data="{show_message: false}"
     role="alert"
     class="w-sm max-w-md alert @lead.Kind shadow-lg">
    <div class="flex overflow-y-auto flex-col gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
            <h3 class="font-bold">New message!</h3>
            <div class="text-xs">You have 1 unread message</div>
        </div>
        <button @@click="show_message=!show_message" class="btn btn-sm">See</button>

        <div x-show="show_message" class="flex flex-col overflow-x-auto flex-wrap">
            <div class="pl-4">@lead.CompanyName</div>
            @* <div class="pl-4">@lead.CustomerName.IfSome(ex => ex.ToString())</div> *@
        </div>
    </div>
</div>


